<UserControl x:Class="CourseProject.UserButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CourseProject"
             mc:Ignorable="d" Height="19.4" MinWidth="57.4" >
    <Grid Margin="0,0,-0.4,0.2">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="username" Content="Button" VerticalAlignment="Top" MinWidth="40" MinHeight="20" Background="#FFE5EBEE" BorderBrush="#FFABBEC8"/>
        <Ellipse x:Name="status" Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="15" Margin="2,2,0,0" Stroke="#FF898989" VerticalAlignment="Top" Width="15" RenderTransformOrigin="0.304,-0.337" Grid.Column="1" StrokeThickness="0"/>

    </Grid>
</UserControl>
